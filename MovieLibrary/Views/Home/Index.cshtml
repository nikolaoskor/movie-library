                            <a href="@Url.Action("Details", "Movies", new { id = movie.value.MovieId })">@movie.value.Title</a>
                        </h5>
                        <p class="card-text category-name">@movie.value.Category.CategoryName</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/Movies/searchMovie.js"></script>
<link rel="stylesheet" href="~/css/home.css" />
