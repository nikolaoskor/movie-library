@model MovieLibrary.Models.Actors

@{
    ViewData["Title"] = $"{Model.Name} - Delete";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-custom btn-back mt-2">All Actors</a>
</div>
<hr />

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <hr />
    <h3>Are you sure you want to delete this Actor?</h3>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<link rel="stylesheet" href="~/css/Actors/actors-delete.css" />