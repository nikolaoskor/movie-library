@model MovieLibrary.Models.Actors

@{
    ViewData["Title"] = Model.Name;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Actors/actors-details.css" />
</head>
<body>
    <div class="d-flex justify-content-between align-items-center">
        <h1>@Model.Name</h1>
        <a asp-action="Edit" asp-route-id="@Model?.ActorId" class="btn btn-warning btn-custom">Edit</a>
    </div>
    <hr class="actor-separator" />

    <div>
        <h4>Movies</h4>
        <div class="row">
            @foreach (var movie in Model.Movie)
            {
                <div class="col-md-3">
                    <div class="card mb-3">
                        <a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })">
                            <img src="@movie.ImageUrl" class="card-img-top movie-img" alt="@movie.Title" />
                            <div class="card-body">
                                <h5 class="card-title"><a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })">@movie.Title</a></h5>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-success btn-custom">All Actors</a>
    </div>
</body>
</html>
