@model MovieLibrary.Models.Categories

@{
    ViewData["Title"] = "Create a new Category";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Create a new Category</h1>
    <div class="back-to-list">
        <a asp-action="Index" class="btn btn-secondary">All Categories</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="category-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group submit-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="~/css/Categories/categories-create.css" asp-append-version="true" />
