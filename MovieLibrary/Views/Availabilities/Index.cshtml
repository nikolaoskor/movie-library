@model IEnumerable<MovieLibrary.Models.Availabilities>

@{
    ViewData["Title"] = "Index";
}

<h1>Platforms</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
           @*      Platform *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AvailabilityId" class="platform-name">
                        @Html.DisplayFor(modelItem => item.AvailabilityName)
                    </a>
                </td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.AvailabilityId" class="btn btn-success btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AvailabilityId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AvailabilityId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="~/css/Availabilities/availabilities.css" />
